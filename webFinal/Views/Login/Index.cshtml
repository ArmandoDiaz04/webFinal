
@{
    ViewData["Title"] = "Index";
}

<div class="container text-light mt-5 mb-5 d-flex align-items-center justify-content-center">

    <div class="card text-bg-dark" id="imgDiv">
        <img src="src/img/login.png" id="logImagen" class="card-img" alt="..." >
        <div class="card-img-overlay d-flex justify-content-center align-items-center row">

            <form class="col-8" asp-controller="Login" asp-action="Index" method="post">
                <!-- Email input -->
                <div class="form-outline">
                 
                    <label class="form-label" for="form2Example1">Usuario</label>
                    <input type="email" id="form2Example1" class="form-control" name="Email" />

                </div>

                <!-- Password input -->
                <div class="form-outline">
                    <label class="form-label" for="form2Example2">Contraseña</label>
                    <input type="password" id="form2Example2" class="form-control" name="Password" />
                </div>

                <!-- 2 column grid layout for inline styling -->
                
                <div class="row mb-4 ">
                    <div class="col">
                        <!-- Simple link -->
                        <br />
                        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                        <a asp-controller="Usuarios" asp-action="Create">¡Iniciar sesión como empresa!</a>
                    </div>
                </div>

           
            </form>
            

            <div class="text-center  col-12" id="blur">
                <p>¿No posees una cuenta?
                    <br />
                    <a asp-controller="Usuarios" asp-action="Create">¡Registrate!</a></p>
                <p>
                    ¿Eres miembro de una empresa?
                    <br />
                    <a asp-controller="Empresa" asp-action="Create">¡Registrate como empresa!</a>
                </p>
            </div>
        </div>
    </div>
</div>
